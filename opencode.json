{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        },
        "chrome-devtools": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest"
            ]
        },
        "herd": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "environment": {
                "SITE_PATH": "/Users/bostjan/Code/muha/priprave"
            }
        }
    }
}